<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242527"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="#00FFFFFF"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:translationY="-150dp">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="ตำบลริมสีม่วง"
                android:textColor="#E7E8EA"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="275dp"
                android:layout_height="wrap_content"

                android:gravity="center_horizontal"
                android:text="มีอะไรน่าเที่ยว"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nickname"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="ลงชื่อเพื่อเช้าสู่ระบบ"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:translationY="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:orientation="vertical"
            android:translationY="15dp">

            <Button
                android:id="@+id/btnOK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#333436"
                android:onClick="MainPage"
                android:text="ตกลง"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:translationY="20dp" />
            <Button
                android:id="@+id/FB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#333436"
                android:drawableLeft="@drawable/facebook_svgrepo_com"
                android:fontFamily="sans-serif-medium"
                android:text="ติดต่อเรา"
                android:textColor="#E4E5E7"
                android:translationY="25dp"
                app:iconTint="#B2B3B5" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>