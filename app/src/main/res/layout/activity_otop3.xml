<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242527"
    tools:context=".otop3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="สมุนไพรชญานิน"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:translationY="15dp" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="295dp"
                android:src="@drawable/bo1"
                android:translationY="15dp"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="        เพชรบูรณ์ขึ้นชื่อลือเลื่องเมืองมะขามหวาน ในสมัยปู่ย่าตายายรู้จักดูแลสุขภาพผิวพรรณ โดยการนำมะขามที่มีอยู่ในท้องถิ่นมาขัดผิวกายหรือพอกผิวหน้า ทำให้แลดูกระจ่างใส ผิวพรรณนุ่ม ชุ่มชื่น เปล่งปลั่ง ดังนั้นสมุนไพรชญานิน (วิสาหกิจชุมชนสมุนไพรเพื่อสุขภาพเขาค้อ) จึงมีแนวความคิดนำมะขามที่มีอยู่ในท้องถิ่นเป็นจำนวนมากมาเพิ่มมูลค่าผสมผสานกับนวัตกรรมใหม่ๆ พัฒนาเป็นผลิตภัณฑ์จากธรรมชาติเพื่อสุขภาพผิวพรรณ เน้นการใช้วัตถุดิบจากธรรมชาติให้มากที่สุด อีกทั้งกระบวนการผลิตต่างๆ ยังเป็นมิตรกับสิ่งแวดล้อม และตระหนักถึงการใช้ทรัพยากรสมุนไพรอื่นๆ ในชุมชน เพื่อให้เกิดประโยชน์สร้างรายได้และสร้างเครือข่ายให้กับชุมชนอีกด้วย  "
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBACK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="BackPage"
                android:text="BACK"
                android:background="#333436"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/back02"
                android:translationX="12dp" />

            <Button
                android:id="@+id/btnHOME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="HomePage"
                android:text="HOME"
                android:background="#333436"
                android:textColor="@color/white"
                android:translationX="73dp"
                android:drawableLeft="@drawable/home01"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>